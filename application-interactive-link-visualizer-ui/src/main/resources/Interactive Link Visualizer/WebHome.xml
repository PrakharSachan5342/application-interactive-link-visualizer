    <property>
      <code>require(['jquery', 'visualisationAPI'], function($, visualisationAPI) {
    const solrServiceURL = new XWiki.Document('SuggestSolrService', 'XWiki').getURL('get');
    var tempData = null;
    var edgeKeyCounter = 1;
    var isFirstLoad = true;

    // XWiki theme variable colors
    #template('colorThemeInit.vm')
     var themeColors = $jsontool.serialize({
        'nodeColor': $theme.linkColor,
        'labelColor': $theme.textColor,
        'fadeColor': $theme.highlightColor,
        'labelContainerColor': $theme.pageContentBackgroundColor
    });

    $(document).ready(function() {
        $('#update-graph-button').trigger('click');
    });
    $('#update-graph-button').on('click', function() {
      var nb = isFirstLoad ? 1000 : $('#nb-input').val(); // Get the value of 'nb' from the input field
      var isFirstLoad = false;

        $.post(solrServiceURL, {
            outputSyntax: 'plain',
            nb: nb,
            media: 'json',
            query: [
                'q=*:*',
                'q.op=AND',
                'fq=type:DOCUMENT',
                'fl=title_, reference, links, wiki, spaces, name'
            ].join('\n'),
            input: " "
        }, function(response) {
            tempData = response;
          const nodes = tempData.map(function(obj) {
                return {
                    key: obj.reference,
                    attributes: {
                        label: obj.title_,
                        color: themeColors.nodeColor,
                        reference: obj.reference,
                        pageURL: new XWiki.Document(XWiki.Model.resolve(obj.reference)).getURL()
                    }
                };
            });

            const edges = [];
            tempData.forEach(function(obj) {
                if (obj.links &amp;&amp; obj.links.length &gt; 0) {
                    obj.links.forEach(function(link) {
                        var target = link.replace(/^entity:/, '');
                        var isValid = tempData.some(function(item) {
                            return item.reference === target;
                        });
                        if (isValid) {
                            edges.push({
                                key: edgeKeyCounter.toString(),
                                target: target,
                                source: obj.reference
                            });
                            edgeKeyCounter++;
                        }
                    });
                }
            });
            const graphData = {
                nodes: nodes,
                edges: edges
            };

            $('#sigma-container').empty();
            $('#node-count').text('Displaying ' + nodes.length + ' documents &amp; ');
            $('#edge-count').text(edges.length + ' links');
            visualisationAPI.visualize(graphData, "sigma-container", themeColors);

        });
    });
});</code>
